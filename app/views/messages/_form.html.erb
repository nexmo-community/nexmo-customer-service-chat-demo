<div class="ui card">
  <div class="content">
    <%= form_for(@new_message, html: { class: 'ui form error' }) do |f| %>
      <%= f.hidden_field :number %>
      <div class="field">
        <%= f.text_area :text, rows: 3 %>
      </div>
      <div class="text right aligned">
        <%= f.submit 'Send', class: 'ui submit button ' %>
      </div>
    <% end %>
  </div>
</div>
